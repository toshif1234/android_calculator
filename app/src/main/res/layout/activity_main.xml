<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <EditText
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="569dp"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/b7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_margin="3pt"
                android:background="@drawable/button_border"
                android:text="7"
                android:textColor="#FFFFFFFF"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/b8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_margin="3pt"
                android:background="@drawable/button_border"
                android:text="8"
                android:textColor="#FFFFFFFF"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/b9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_margin="3pt"
                android:background="@drawable/button_border"
                android:text="9"
                android:textColor="#FFFFFFFF"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/div"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_margin="3pt"
                android:background="@drawable/button_border"
                android:text="/"
                android:textColor="#FFFFFFFF"
                android:textSize="30dp"></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/b4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_margin="3pt"
                android:background="@drawable/button_border"
                android:text="4"
                android:textColor="#FFFFFFFF"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/b5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_margin="3pt"
                android:background="@drawable/button_border"
                android:text="5"
                android:textColor="#FFFFFFFF"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/b6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_margin="3pt"
                android:background="@drawable/button_border"
                android:text="6"
                android:textColor="#FFFFFFFF"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/mul"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_margin="3pt"
                android:background="@drawable/button_border"
                android:text="*"
                android:textColor="#FFFFFFFF"
                android:textSize="30dp"></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/b1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_margin="3pt"
                android:background="@drawable/button_border"
                android:text="1"
                android:textColor="#FFFFFFFF"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/b2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_margin="3pt"
                android:background="@drawable/button_border"
                android:text="2"
                android:textColor="#FFFFFFFF"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/b3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_margin="3pt"
                android:background="@drawable/button_border"
                android:text="3"
                android:textColor="#FFFFFFFF"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/sub"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_margin="3pt"
                android:background="@drawable/button_border"
                android:text="-"
                android:textColor="#FFFFFFFF"
                android:textSize="30dp"></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/dot"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_margin="3pt"
                android:background="@drawable/button_border"
                android:text="."
                android:textColor="#FFFFFFFF"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/b0"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_margin="3pt"
                android:background="@drawable/button_border"
                android:text="0"
                android:textColor="#FFFFFFFF"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/clear"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_margin="3pt"
                android:background="@drawable/button_border"
                android:text="c"
                android:textColor="#FFFFFFFF"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/add"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_margin="3pt"
                android:background="@drawable/button_border"
                android:text="+"
                android:textColor="#FFFFFFFF"
                android:textSize="30dp"></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/back"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_margin="3pt"
                android:background="@drawable/button_border"
                android:text="back"
                android:textColor="#FFFFFFFF"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/equal"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_margin="3pt"
                android:background="@drawable/button_border"
                android:text="="
                android:textColor="#FFFFFFFF"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/rem"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_margin="3pt"
                android:background="@drawable/button_border"
                android:text="%"
                android:textColor="#FFFFFFFF"
                android:textSize="30dp"></Button>
        </TableRow>
    </TableLayout>
</LinearLayout>